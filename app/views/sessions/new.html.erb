<h1>Login</h1>

<%= notice %>
<div class="alert alert-danger">
  <%= flash[:alert] %>
</div>


<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit 'Log in', class: 'btn btn-primary' %>
<% end %>



